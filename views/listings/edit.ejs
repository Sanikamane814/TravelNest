<% layout("/layouts/boilerplate") %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="card-header bg-dark text-white py-3">
          <h3 class="mb-0"><i class="fas fa-edit me-2"></i>Edit your Listing</h3>
        </div>
        <div class="card-body p-4">
          <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
            <!-- Title Field -->
            <div class="mb-4">
              <label for="title" class="form-label fw-semibold">Title</label>
              <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control form-control-lg rounded-3" required/>
              <div class="invalid-feedback">Please provide a title for your listing</div>
            </div>
            
            <!-- Description Field -->
            <div class="mb-4">
              <label for="description" class="form-label fw-semibold">Description</label>
              <textarea name="listing[description]" class="form-control rounded-3" rows="4" required><%= listing.description %></textarea>
              <div class="invalid-feedback">Please describe your property</div>
            </div>

            <!-- Image Section -->
            <div class="mb-4 border p-3 rounded-3 bg-light">
              <div class="d-flex align-items-center mb-3">
                <div class="flex-shrink-0 me-3">
                  <p class="mb-0 fw-semibold">Current Image:</p>
                </div>
                <div class="flex-grow-1">
                  <img src="<%= originalImageurl %>" class="img-thumbnail rounded" style="max-height: 150px; object-fit: cover;"/>
                </div>
              </div>
              
              <div class="mt-3">
                <label for="image" class="form-label fw-semibold">Update Image</label>
                <div class="file-upload-wrapper">
                  <input name="listing[image][url]" type="file" class="form-control" id="imageUpload"/>
                  <small class="text-muted">Recommended size: 800x600px, JPG/PNG format</small>
                </div>
              </div>
            </div>

            <!-- Price & Country Row -->
            <div class="row g-3 mb-4">
              <div class="col-md-6">
                <label for="price" class="form-label fw-semibold">Price per night</label>
                <div class="input-group">
                  <span class="input-group-text bg-light">â‚¹</span>
                  <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control" required/>
                </div>
                <div class="invalid-feedback">Please enter a valid price</div>
              </div>
              <div class="col-md-6">
                <label for="country" class="form-label fw-semibold">Country</label>
                <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control" required/>
                <div class="invalid-feedback">Please enter the country</div>
              </div>
            </div>

            <!-- Location Field -->
            <div class="mb-4">
              <label for="location" class="form-label fw-semibold">Location</label>
              <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control" required/>
              <div class="invalid-feedback">Please specify the location</div>
            </div>

            <!-- Submit Button -->
            <div class="d-grid gap-2 mt-4">
              <button class="btn btn-primary btn-lg rounded-pill fw-semibold py-2" type="submit">
                <i class="fas fa-save me-2"></i>Update Listing
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
